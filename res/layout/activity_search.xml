<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SearchActivity"
    tools:ignore="Overdraw" >
    
 	<!-- This section is for the Activity Title Text -->
        
	<TextView
		android:id="@+id/search_activitytitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/search_activity_title"
		android:textColor="@color/orange"
		android:textSize="35sp" />
	
	<Button
	    android:id="@+id/search_button_filter"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/search_activitytitle"
	    android:layout_below="@+id/search_activitytitle"
	    android:layout_marginTop="22dp"
	    android:text="@string/search_button_filter"
	    android:background="@color/orange" />
	    
	<ListView
	    android:id="@+id/search_list"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/search_activitytitle"
	    android:layout_below="@+id/search_activitytitle"
	    android:layout_marginTop="104dp"
	    android:background="@color/light_gray" >

	</ListView>


</RelativeLayout>