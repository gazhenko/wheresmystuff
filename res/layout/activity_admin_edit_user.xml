<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AdminEditActivity"
    tools:ignore="Overdraw" >

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        tools:ignore="UselessParent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/usrLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/usr"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/orange" />

            <TextView
                android:id="@+id/space1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

            <EditText
                android:id="@+id/aded_usr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textColor="@color/black" >

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/passLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pass"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/orange" />

            <TextView
                android:id="@+id/space2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

            <EditText
                android:id="@+id/aded_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/phonLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/phon"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/orange" />

            <TextView
                android:id="@+id/space3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

            <EditText
                android:id="@+id/aded_phon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/space4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RadioGroup
                    android:id="@+id/aded_lockGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp" >

                    <RadioButton
                        android:id="@+id/aded_lock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/locked" />

                    <RadioButton
                        android:id="@+id/aded_unlock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unlocked" />
                </RadioGroup>

                <TextView
                    android:id="@+id/space5"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="" />

                <RadioGroup
                    android:id="@+id/aded_adminGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp" >

                    <RadioButton
                        android:id="@+id/aded_nonadmin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/nonadmin" />

                    <RadioButton
                        android:id="@+id/aded_admin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/admin" />
                </RadioGroup>
            </LinearLayout>

            <TextView
                android:id="@+id/space6"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/aded_todelete"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@color/orange"
                    android:text="@string/delete"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/space7"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="" />

                <Button
                    android:id="@+id/aded_tosubmit"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/orange"
                    android:text="@string/submit"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/space8"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="" />

            <Button
                android:id="@+id/aded_tocancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/orange"
                android:text="@string/cancel"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>