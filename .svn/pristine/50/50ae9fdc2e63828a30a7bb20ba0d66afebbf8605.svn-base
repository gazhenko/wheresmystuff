<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:gravity="top"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AdminActivity" >

    <TextView
        android:id="@+id/admin_text1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="2dp"
        android:text="@string/admin"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/orange"
        android:textSize="30sp" />
		    
			<TextView
		        android:id="@+id/space1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="" />
		    
			<Button
		        android:id="@+id/admin_showlocked"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="@string/showlock"
		        android:textSize="20sp"
		        android:background="@color/orange"
		        android:textColor="@color/black" />
		        
			<TextView
		        android:id="@+id/space2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="" />
		        
			<Button
		        android:id="@+id/admin_showreg"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="@string/showreg"
		        android:textSize="20sp"
		        android:background="@color/orange"
		        android:textColor="@color/black" />
		        
			<TextView
		        android:id="@+id/space3"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="" />
				
			<Button
		        android:id="@+id/admin_showadmin"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="@string/showadmin"
		        android:textSize="20sp"
		        android:background="@color/orange"
		        android:textColor="@color/black" />
		   		
			<TextView
		        android:id="@+id/space4"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="" />
		
		    <TextView
		        android:id="@+id/textitems"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="15dp"
		        android:text="@string/users"
		        android:textAppearance="?android:attr/textAppearanceLarge"
		        android:textColor="@color/orange"
		        android:textSize="25sp" />
		    
		    <ListView
		        android:id="@+id/admin_userList"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="@color/light_gray" />

</LinearLayout>