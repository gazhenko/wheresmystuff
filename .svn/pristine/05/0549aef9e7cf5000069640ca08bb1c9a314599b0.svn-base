<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ItemActivity" >

    <!-- This section is for the activity title (Item Description) -->
    
    <TextView
        android:id="@+id/item_activity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/title_activity_item"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/orange"
        android:textSize="30sp" />

    <!-- This section is for the item activity date input -->

    <TextView
        android:id="@+id/item_activity_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/item_activity_name"
        android:layout_below="@+id/item_activity_title"
        android:text="@string/date"
        android:textColor="@color/light_light_gray" />

	<!-- This section is for the item activity picture input (added later) -->

    <ImageView
        android:id="@+id/item_activity_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_activity_title"
        android:layout_alignTop="@+id/item_activity_name"
        android:src="@drawable/basic_profile_pic" />

    <!-- This section is for the item activity name input -->
    
    <TextView
        android:id="@+id/item_activity_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/item_activity_location"
        android:layout_below="@+id/item_activity_date"
        android:layout_marginTop="42dp"
        android:text="@string/put_item_name_here"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/orange"
        android:textSize="12sp" />

    <!-- This section is for the item activity reward input -->
    
    <TextView
        android:id="@+id/item_activity_reward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/item_activity_name"
        android:layout_marginTop="20dp"
        android:text="@string/put_item_reward_here"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/orange"
        android:textSize="12sp" />

    <!-- This section is for the item activity location input -->
    
    <TextView
        android:id="@+id/item_activity_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/item_activity_reward"
        android:layout_marginTop="20dp"
        android:text="@string/put_item_city_here"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/orange"
        android:textSize="12sp" />
    
    <TextView
        android:id="@+id/item_activity_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/item_activity_city"
        android:layout_marginTop="20dp"
        android:text="@string/put_item_state_here"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/orange"
        android:textSize="12sp" />
    
    <!-- This section is for the item activity status input -->
    
    <TextView
        android:id="@+id/item_activity_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/item_activity_state"
        android:layout_marginTop="20dp"
        android:text="@string/put_item_status_here"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/orange"
        android:textSize="12sp" />
    
    <!-- This section is for the item activity description (title) and the description (input) -->
    
    <TextView
        android:id="@+id/item_activity_description_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_activity_picture"
        android:layout_below="@+id/item_activity_picture"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"
        android:text="@string/item_description_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/orange"
        android:textSize="20sp" />
    
    <TextView
        android:id="@+id/item_activity_description_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_activity_description_title"
        android:layout_below="@+id/item_activity_description_title"
        android:gravity="fill"
        android:text="@string/put_item_description_here"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:background="@color/light_gray" />

    

</RelativeLayout>